<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Classes' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/classes">Quản lý lớp học</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
                  </ol>
                </nav>
                <h3>Quản lý lớp học</h3>
                <a class="mt-2 btn btn-primary" href="/admin/classes/add" role="button">Thêm mới</a>
              </div>
            </div>
          </div>
          <div class="mx-5 mt-3">
            <div class="row">
              <div class="col pt-3 border border-primary border-2 rounded-3">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr class="text-center">
                      <th scope="col">ID</th>
                      <th scope="col">Tên lớp</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% classes.docs.forEach((classItem) => { %>
                    <tr>
                      <td class="fw-td" scope="row"><%= classItem._id %></td>
                      <td><%= classItem.tenLop || 'Không rõ tên lớp' %></td>
                      <td>
                        <div class="d-flex justify-content-center">
                          <a href="/admin/classes/edit/<%= classItem._id %>" class="ms-1 btn btn-warning">Sửa</a>
                          <form method="post" action="/admin/classes/delete/<%= classItem._id %>" style="display: inline;">
                            <button type="submit" class="ms-1 btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xoá lớp học này không?');">Xóa</button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <%- include('./../partial/pagination', { data: classes }) %>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>