<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Categories' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/categories">Quản lý danh mục</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
                  </ol>
                </nav>
                <h3>Thêm mới danh mục</h3>
                <a class="mt-2 btn btn-primary" href="/admin/categories" role="button">Danh sách</a>
              </div>
            </div>
          </div>
          <!-- alert -->
          <div class=" mt-3 fix-mr">
            <div class="row">
              <% if (category && category.error) { %>
              <div class='p-2 alert alert-danger col-6'><%= category.error %></div>
              <% } %>
            </div>
          </div>
          <!-- alert -->
          <div class="mx-5 mt-3">
            <form method="post" class="row">
              <div class="col-6">
                <div class="form-group">
                  <label for="name">Tên danh mục</label>
                  <input type="name" id="name" name="name" class="form-control" placeholder="Nhập tên danh mục" required />
                </div>
                <br />
                <label for="active">Public</label>
                <select class="form-control" name="active" id="active">
                  <option selected value="1">True</option>
                  <option value="0">False</option>
                </select>
              </div>
              <div class="col-6"></div>
              <button type="submit" class="fix-btn-submit mt-2 btn btn-success w-auto">Thêm mới danh mục</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>