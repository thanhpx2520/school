<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Accounts' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/accounts">Quản lý tài khoản</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Chi tiết tài khoản / <%= account.doc.email %>
                    </li>
                  </ol>
                </nav>
                <h3>Chi tiết tài khoản: <%= account.doc.email %></h3>
                <a class="mt-2 btn btn-primary" href="/admin/accounts" role="button">Danh sách</a>
              </div>
            </div>
          </div>
          <!-- alert -->
          <div class="mt-3 fix-mr">
            <div class="row">
              <% if (accountAlert && accountAlert.error) { %>
              <div class='p-2 alert alert-danger col-6'><%= accountAlert.error %></div>
              <% } %>
            </div>
          </div>
          <!-- alert -->
          <div class="mx-5 mt-3">
            <form method="post" class="row">
              <div class="col-6">
                <div class="form-group">
                  <label class="form-label" for="email">Email tài khoản</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email tài khoản" value="<%= account.doc.email %>" required />
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="password">Mật khẩu</label>
                  <input type="text" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" value="<%= account.doc.password %>" required />
                </div>
              <div class="col-6">
                <label class="form-label" for="roleSelect">Role</label>
                <select class="form-control" id="roleSelect" name="role">
                  <option value="member" <%= account.doc.role === 'student' ? 'selected' : '' %>>Student</option>
                  <option value="admin" <%= account.doc.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
              </div>
              <button type="submit" class="my-2 mb-5 btn btn-warning w-auto">Sửa tài khoản</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>