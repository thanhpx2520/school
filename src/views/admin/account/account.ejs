<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Accounts' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/accounts">Quản lý tài khoản</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
                  </ol>
                </nav>
                <h3>Quản lý tài khoản</h3>
                <a class="mt-2 btn btn-primary" href="/admin/accounts" role="button">Danh sách</a>
              </div>
            </div>
          </div>
          <div class="mx-5 mt-3">
            <div class="row">
              <div class="col pt-3 border border-primary border-2 rounded-3">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr class="text-center">
                      <th scope="col">ID</th>
                      <th scope="col">Email tài khoản</th>
                      <th scope="col">Mật khẩu tài khoản</th>
                      <th scope="col">Role</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% accounts.docs.forEach((account) => { %>
                    <tr>
                      <td class="fw-td" scope="row"><%= account._id %></td>
                      <td><%= account.email %></td>
                      <td><%= account.password %></td>
                      <td class="text-center">
                        <% if (account.role === 'admin') { %>
                        <span class="bg-danger text-white p-1 rounded-2">Admin</span>
                        <% } else { %>
                        <span class="bg-primary text-white p-1 rounded-2">Student</span>
                        <% } %>
                      </td>
                      <td>
                        <div class="d-flex justify-content-center">
                          <a href="/admin/accounts/edit/<%= account._id %>" class="ms-1 btn btn-warning">Sửa</a>
                          <form method="POST" action="/admin/accounts/delete/<%= account._id %>" style="display: inline;">
                            <button type="submit" class="ms-1 btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xoá tài khoản này không?');">Xóa</button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <%- include('./../partial/pagination', { data: accounts }) %>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>