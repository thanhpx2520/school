<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Users' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/users">Quản lý người dùng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
                  </ol>
                </nav>
                <h3>Thêm mới người dùng</h3>
                <a class="mt-2 btn btn-primary" href="/admin/users" role="button">Danh sách</a>
              </div>
            </div>
          </div>
          <!-- alert -->
          <div class=" mt-3 fix-mr">
            <div class="row">
              <% if (user && user.error) { %>
              <div class='p-2 alert alert-danger col-6'><%= user.error %></div>
              <% } %>
            </div>
          </div>
          <!-- alert -->
          <div class="mx-5 mt-3">
            <form method="post" class="row">
              <div class="col-6">
                <div class="form-group">
                  <label class="form-label" for="full_name">Tên người dùng</label>
                  <input type="text" class="form-control" id="full_name" name="full_name" placeholder="Nhập tên người dùng" required />
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="email">Email người dùng</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email người dùng" required />
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="password">Mật khẩu</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required />
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="phone_number">Số điện thoại</label>
                  <input type="number" class="form-control" id="phone_number" name="phone_number" placeholder="Nhập số điện thoại" required />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label class="form-label" for="address">Địa chỉ</label>
                  <input type="text" class="form-control" id="address" name="address" placeholder="Nhập địa chỉ" required />
                </div>
                <br />
                <label class="form-label" for="active">Trạng thái</label>
                <select class="form-control" id="active" name="active">
                  <option value="1">Cho phép sử dụng</option>
                  <option value="0">Chặn người dùng</option>
                </select>
                <br />
                <label class="form-label" for="role">Role</label>
                <select class="form-control" id="role" name="role">
                  <option value="member">Member</option>
                  <option value="admin">Admin</option>
                </select>
                <br />
              </div>
              <button type="submit" class="fix-btn-submit my-2 mb-5 btn btn-success w-auto">
                Thêm mới người dùng
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>