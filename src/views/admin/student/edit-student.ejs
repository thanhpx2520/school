<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<style>
  #maTaiKhoan {
    display: none;
  }
</style>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Students' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/students">Quản lý sinh viên</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Chi tiết sinh viên / <%= student.doc.maSV %>
                    </li>
                  </ol>
                </nav>
                <h3>Chi tiết sinh viên: <%= student.doc.maSV %></h3>
                <a class="mt-2 btn btn-primary" href="/admin/students" role="button">Danh sách</a>
              </div>
            </div>
          </div>

          <!-- alert -->
          <div class="mt-3 fix-mr">
            <div class="row">
              <% if (studentAlert && studentAlert.error) { %>
              <div class='p-2 alert alert-danger col-6'><%= studentAlert.error %></div>
              <% } %>
            </div>
          </div>

          <div class="mx-5 mt-3">
            <form method="post" class="row">
              <div class="col-6">
                <div class="form-group">
                  <label class="form-label" for="maSV">Mã sinh viên</label>
                  <input type="text" class="form-control" id="maSV" name="maSV"
                    placeholder="Nhập mã sinh viên" value="<%= student.doc.maSV %>" required />
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="hoTen">Tên sinh viên</label>
                  <input type="text" class="form-control" id="hoTen" name="hoTen"
                    placeholder="Nhập tên sinh viên" value="<%= student.doc.hoTen %>" required />
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="email">Email sinh viên</label>
                  <input type="email" class="form-control" id="email" name="email"
                    placeholder="Nhập email sinh viên" value="<%= student.doc.maTaiKhoan.email %>" required />
                    <input type="text" id="maTaiKhoan" name="maTaiKhoan" value="<%= student.doc.maTaiKhoan._id %>">
                </div>
                <br />
                <div class="form-group">
                  <label class="form-label" for="password">Mật khẩu</label>
                  <input type="password" class="form-control" id="password" name="password"
                    placeholder="Nhập mật khẩu" value="<%= student.doc.maTaiKhoan.password %>" required />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label class="form-label" for="diaChi">Địa chỉ</label>
                  <input type="text" class="form-control" id="diaChi" name="diaChi"
                    placeholder="Nhập địa chỉ" value="<%= student.doc.diaChi %>" required />
                </div>
                <br />
                <label class="form-label" for="maLop">Lớp học</label>
                <select class="form-control" id="maLop" name="maLop">
                  <% classes.docs.forEach(classItem => { %>
                  <option value="<%= classItem._id %>" 
                    <%= (classItem._id.toString() === student.doc.maLop._id.toString()) ? 'selected' : '' %>>
                    <%= classItem.tenLop %>
                  </option>
                  <% }); %>
                </select>
                <br />
                <div class="form-group">
                  <label class="form-label" for="soDienThoai">Số điện thoại</label>
                  <input type="number" class="form-control" id="soDienThoai" name="soDienThoai"
                    placeholder="Nhập số điện thoại" value="<%= student.doc.soDienThoai %>" required />
                </div>
              </div>

              <button type="submit" class="fix-btn-submit my-2 mb-5 btn btn-success w-auto">
                Cập nhật sinh viên
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>
