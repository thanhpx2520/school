<!DOCTYPE html>
<html lang="en">
<%- include('./../partial/head') %>

<body>
  <%- include('./../partial/header') %>
  <main>
    <div class="d-flex">
      <div class="row mx-0">
        <%- include('./../partial/nav', { navLinkActive: 'Students' }) %>
        <!-- CONTENT -->
        <div class="fix-content">
          <div class="mx-5">
            <div class="row">
              <div class="col">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/students">Quản lý sinh viên</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Danh sách</li>
                  </ol>
                </nav>
                <h3>Quản lý sinh viên</h3>
                <a class="mt-2 btn btn-primary" href="/admin/students/add" role="button">Thêm mới</a>
              </div>
            </div>
          </div>
          <div class="mx-5 mt-3">
            <div class="row">
              <div class="col pt-3 border border-primary border-2 rounded-3">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr class="text-center">
                      <th scope="col">ID</th>
                      <th scope="col">Mã sinh viên</th>
                      <th scope="col">Tên sinh viên</th>
                      <th scope="col">Lớp </th>
                      <th scope="col">Email</th>
                      <th scope="col">Số điện thoại</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% students.docs.forEach((student) => { %>
                    <tr>
                      <td class="fw-td" scope="row"><%= student._id %></td>
                      <td><%= student.maSV %></td>
                      <td><%= student.hoTen %></td>
                      <td><%= student.maLop.tenLop %></td>
                      <td><%= student.maTaiKhoan.email %></td>
                      <td><%= student.soDienThoai %></td>
                      <td>
                        <div class="d-flex justify-content-center">
                          <a href="/admin/students/edit/<%= student._id %>" class="ms-1 btn btn-warning">Sửa</a>
                          <form method="POST" action="/admin/students/delete/<%= student._id %>" style="display: inline;">
                            <button type="submit" class="ms-1 btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xoá người dùng này không?');">Xóa</button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <%- include('./../partial/pagination', { data: students }) %>
        </div>
      </div>
    </div>
  </main>
  <%- include('./../partial/footer') %>
</body>

</html>